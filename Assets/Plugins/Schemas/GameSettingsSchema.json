{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "GameSettings",
    "type": "object",
    "properties": {
        "resolution": {
            "type": "string",
            "enum": ["1920x1080", "1280x720", "800x600"]
        },
        "fullscreen": {
            "type": "boolean"
        },
        "volume": {
            "type": "integer",
            "minimum": 0,
            "maximum": 100
        }
    },
    "required": ["resolution", "fullscreen", "volume"]
}
